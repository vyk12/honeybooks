<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <h1>HoneyBooks</h1>

        <nav>
            <ul>
                <li>@Html.ActionLink("Browse books list", "Browse", "Books")</li>
                <li>@Html.ActionLink("Look for a book", "Search", "Books")</li>
                <li>@Html.ActionLink("Borrowers home page", "Index", "Borrowers")</li>
                @if (Session["Borrower"] != null)
                {
                    <li>@Html.ActionLink("Log out", "Logout", "Borrowers")</li>
                }
                @if (Session["User"] != null)
                {
                    <li>@Html.ActionLink("Authors manager", "Index", "Authors")</li>
                    <li>@Html.ActionLink("Books manager", "Index", "Books")</li>
                    <li>@Html.ActionLink("Borrowers manager", "List", "Borrowers")</li>
                    <li>@Html.ActionLink("Users manager", "Index", "Users")</li>
                    <li>@Html.ActionLink("Log out", "Logout", "Pages")</li>
                }
            </ul>
        </nav>
    </header>

    <section>
        @RenderBody()
    </section>
</body>
</html>